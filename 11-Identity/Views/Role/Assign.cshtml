@model List<RoleVM>

<h2>Role Atama</h2>

<form asp-action="Assign" method="post">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Role Name</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        <input type="checkbox" asp-for="@Model[i].HasAssign" />
                    </td>
                    <td>@Model[i].RoleName</td>
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" value="Rol Ata" class="btn btn-warning" />
</form>
