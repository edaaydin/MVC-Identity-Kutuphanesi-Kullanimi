@model UserVM

<div class="row justify-content-center">
    <div class="col-md-6 offset-3">
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label asp-for="UserName" class="form-label">Kullanıcı Adı</label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ReturnUrl" type="hidden" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Sifre</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input class="btn btn-success" value="Kayıt Ol" type="submit" />
            </div>
        </form>
    </div>
</div>
